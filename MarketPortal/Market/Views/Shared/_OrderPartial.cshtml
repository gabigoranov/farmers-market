@using Market.Models.DTO
@model OrderDTO
@{
    Model.Price = Math.Round(Model.Price, 2);
}

<a asp-action="Description" asp-controller="Orders" asp-route-id="@Model.Id">
    <div class="offer-partial-container">
        <div>
            <h2>@(Model.Title + " | " + Model.Address)</h2>
            <p>@(Model.Price + "BGN, " + Model.Quantity + "KG")</p>
        </div>

        <div class="offer-partial-form-buttons-container">
            <form asp-controller="Orders" asp-action="Approve" method="get" asp-route-id="@Model.Id">
                <button type="submit" class="clean-button">
                    <i class="fa-solid fa-check"></i>
                </button>
            </form>
            <form asp-controller="Orders" asp-action="Decline" method="get" asp-route-id="@Model.Id">
                <button type="submit" class="clean-button">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </form>
        </div>
    </div>
</a>