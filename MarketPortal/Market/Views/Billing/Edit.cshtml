@using Market.Data.Models
@model BillingDetails

@{
    ViewData["Title"] = "Billing";
}

<div class ="form">
    <form asp-action="Edit" asp-controller="Billing" method="post" class="gapped">
        <h2>Billing Details</h2>

        <div class="form-container">
            <label for="FullName">Full Name</label>
            <input value="@Model.FullName" asp-for="FullName" id="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-container">
            <label for="Address">Address</label>
            <input value="@Model.Address" asp-for="Address" id="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-container">
            <label for="City">City</label>
            <input value="@Model.City" asp-for="City" id="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-container">
            <label for="PostalCode">Postal Code</label>
            <input value="@Model.PostalCode" asp-for="PostalCode" id="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="form-container">
            <label for="PhoneNumber">Phone Number</label>
            <input value="@Model.PhoneNumber" asp-for="PhoneNumber" id="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-container">
            <label for="Email">Email</label>
            <input value="@Model.Email" asp-for="Email" id="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="form-submit">Submit</button>

        </div>
    </form>

    <form asp-action="Delete" asp-controller="Billing" method="post" onsubmit="return confirm('Are you sure you want to delete this billing record?');" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="form-submit">Delete</button>
    </form>
</div>
