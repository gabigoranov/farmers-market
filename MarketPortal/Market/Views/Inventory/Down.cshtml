@model ChangeStockViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<form class="form" asp-action="Down" method="post" enctype="multipart/form-data">
    <div class="form-container">
        <input asp-for="Quantity" placeholder="@Localizer["Quantity"]" aria-required="true" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit">@Localizer["Submit"]</button>
</form>
