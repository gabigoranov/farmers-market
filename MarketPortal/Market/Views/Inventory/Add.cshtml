@using Market.Data.Models
@model StockViewModel

@{
    ViewData["Title"] = "Add Stock";
    List<OfferType> offerTypes = ViewBag.OfferTypes;

}

<form class="form" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-container">
        <input asp-for="Title" placeholder="Title" aria-required="true" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-container">
        <select asp-for="OfferTypeId">
            @foreach(var offerType in offerTypes)
            {
                <option value="@offerType.Id">@offerType.Name</option>

            }
        </select>
    </div>
    <div class="form-container">
        <input asp-for="Quantity" placeholder="Quantity" aria-required="true" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button class="form-submit" type="submit">Submit</button>
</form>
