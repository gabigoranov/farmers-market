@using Market.Data.Models
@model List<Review>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    decimal avgReview;

    if(Model == null || Model.Count == 0)
    {
        avgReview = 0m;
    }
    else
    {
        avgReview = Model.Select(x => x.Rating).Average();
    }
}

<style>

</style>

<div class="widget avg-rating-widget">
    <div class="row gapped">
        <h1 class="text-[2.5rem]">@(avgReview)</h1>
        <i class="fa-solid fa-star text-[2.5rem]"></i>
    </div>
    <p class="font-normal text-[1.5rem]">@Localizer["YourAVG"]</p>
</div>
