@using Market.Data.Models
@model Stock

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    string quantityColor = Model.Quantity > 80 ? "bg-green" : Model.Quantity > 40 ? "bg-orange" : "bg-red";
}

<div class="stock-partial-container">
    <div class="stock-partial-components-container">
        <h2 class="stock-partial__title">@Model.Title</h2>
        <i class="fa-solid fa-clock stock-partial__icon"></i>
        <p class="stock-partial__date"><span class="stock-partial__date_title">@(Localizer["LastUpdated"])<br /></span>@(Model.LastUpdated.ToString("dd-MM-yy"))</p>
    </div>

    <h3 class="stock-partial__quantity @quantityColor">@(Model.Quantity) KG</h3>
</div>